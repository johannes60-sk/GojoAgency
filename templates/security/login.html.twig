{% extends 'base.html.twig' %}

{% block title 'Se connecter'%}

{% block body%}

    <div class="container justify-content-center mt-4 col-6">

        {% if error %}
            <div class="alert alert-danger">
                {{error.messageKey}}    
            </div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Nom d'utilisateur</label>
                <input type="text" id="username" name="_username" class="form-control" value="{{last_username}}" />
            </div>

            <div class="form-group mb-3">
                <label for="username" class="form-label">Mot de passe </label>
                <input type="password" id="password" name="_password" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
    </div>

{% endblock %}