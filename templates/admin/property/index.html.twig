{% extends 'base.html.twig' %}

{% block title 'Gerer mes biens' %}

{% block body %}

	<div class="container mt-4">
		<h1 class="text-center my-4">Gerer les biens</h1>
		
		<div class="d-flex justify-content-end mb-4">
			<a href="{{path('admin.property.new')}}" class="btn btn-primary mt-3 ">Creer un nouveau bien</a>
		</div>

		{% for message in app.flashes('success') %}
			<div  id="success-alert" class="alert alert-success">
				{{message}}
			</div>
		{% endfor %}

		<table class="table table-striped">
			<thead>
				<tr></tr>
			</thead>
			<tbody>
				{% for property in properties %}
					<tr>
						<td>{{property.title}}</td>
						<td>
                            <a href="{{ path('admin.property.edit', {id: property.id})}}" class="btn btn-secondary">Editer</a>
							<form method="post" action="{{ path('admin.property.delete', {id: property.id}) }}" 
								style="display: inline-block" onsubmit="return confirm('Etes vous vraiement sur ?')">
								<input type="hidden" name="_method" value="DELETE"> 
								{# permet de simuler une requete DELETE etant donne que les formulaire ne prenne pas compte que les requete POST et GET #}
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
								<button type="submit" class="btn btn-danger">Supprimer</button>
							</form>
                        </td>
					</tr>
				{% endfor %}
			</tbody>
		</thead>
	</table>

	<div class="Page navigation my-4 ">
			{{ knp_pagination_render(properties) }}
	</div>

</div>{% endblock %}
