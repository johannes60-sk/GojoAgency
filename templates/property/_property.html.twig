

{# | imagine_filter('thumb') #}
<div class="card shadow-sm">

	{% if property.picture %}
		<img src="{{vich_uploader_asset(property.picture, 'imageFile') }} " alt="card-img-top" style="width: 100%; height: 200px;">

	{% else %}
		{# <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveaspectratio="xMidYMid slice" focusable="false">
			<title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
		</svg> #}
		<img src="/images/properties/empty.jpg " alt="card-img-top" style="width: 100%; height: 200px;">

	{% endif %}

	<div class="card-body">
		<h5 class="card-title ">
			<h5>{{property.title}}</h5>
		</h5>
		<div class="card-text ">
			{{property.city}}
			({{property.PostalCode}})
		</div>

		<div class="text-primary  fw-bold fs-5  mb-3">{{ property.formatedPrice }}$</div>

		<div class="d-flex justify-content-between align-items-center">
			<div class="btn-group">
				<a href="{{path('property.show', {id: property.id, slug: property.slug})}}" class="btn btn-sm btn-outline-secondary">Voir</a>
				{# <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> #}
			</div>
			<small class="text-body-secondary">9 mins</small>
		</div>
	</div>
</div>
