{% extends 'base.html.twig' %}

{% block title 'Voir les biens' %}

{% block body %}

{# bg-body-tertiary #}

	<div class="jumbotron bg-dark" style="height: 120px">

		<div class="container col-md-8 offset-2" style="padding-top: 30px">

			{{ form_start(form) }}

			<div class="row">
				<div class="col">
					{{ form_row(form.minSurface) }}
				</div>

				<div class="col">
					{{ form_row(form.maxPrice) }}
				</div>

				<div class="col">
					{{ form_row(form.options) }}
				</div>

				<div class="col">
					<button class="btn btn-outline-primary">Rechercher</button>
				</div>

			</div>

			{{ form_end(form) }}

		</div>
	</div>

	<div class="album mt-5">
		<div class="container">
			<h1 class="text-center mb-5">Voir tout nos bien</h1>
			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
				{% for property in properties %}

					<div class="col">

						{{ include('property/_property.html.twig') }}

					</div>

				{% endfor %}
			</div>

			<div class="Page navigation my-4 ">
				{{ knp_pagination_render(properties) }}
			</div>


		</div>


	{% endblock %}
